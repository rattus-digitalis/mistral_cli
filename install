#!/usr/bin/env bash

# Simple install script for mistral_cli

echo "Creating virtual environment..."
python3 -m venv .venv || { echo "Error creating virtual environment"; exit 1; }

echo "Virtual environment created."

echo "Activating environment..."
source .venv/bin/activate || { echo "Error activating virtual environment"; exit 1; }

echo "Installing dependencies..."
pip install --upgrade pip setuptools > /dev/null
pip install -e . || { echo "Error installing mistral_cli package"; exit 1; }

echo "Installation complete."
echo
echo "To start using mistral_cli:"
echo "  source .venv/bin/activate"
echo "  mistral -dev \"your prompt here\""
